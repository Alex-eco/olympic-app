# Copy this file to backend/.env and fill in the secrets. NEVER commit real keys to Git.
# OpenAI API key (server-side)
OPENAI_API_KEY=sk-REPLACE_WITH_YOUR_OPENAI_KEY

# NowPayments API key (server-side) - used to create invoices and verify webhooks
NOWPAYMENTS_API_KEY=rp_REPLACE_WITH_YOUR_NOWPAYMENTS_KEY

# NowPayments webhook secret (if configured) to verify incoming webhooks
NOWPAYMENTS_IPN_SECRET=replace_with_ipn_secret_if_set

# Optional: SQLite file (backend uses SQLite by default)
DATABASE_URL=./db.sqlite

# Backend port
PORT=3000

# Base price in USD for a session (used for invoice creation). Keep as number.
SESSION_PRICE_USD=2.0
